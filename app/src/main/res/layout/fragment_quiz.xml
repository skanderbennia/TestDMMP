<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.testdmmp.QuizFragment">

    <data>

        <variable
           name="game"
            type="com.example.testdmmp.QuizFragment"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:viewBindingIgnore="true">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:src="@drawable/sys_solaire" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{game.currentQuestion.text}"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/questionRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_marginTop="90dp">

        <RadioButton
            android:id="@+id/secondAnswerRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{game.answers[0]}" />

        <RadioButton
            android:id="@+id/thirdAnswerRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{game.answers[1]}" />

        <RadioButton
            android:id="@+id/fourthAnswerRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{game.answers[2]}" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/suivant_text"
            tools:layout_gravity="center_horizontal"
            tools:layout_marginTop="50dp" />

    </RadioGroup>

    </LinearLayout>

</layout>